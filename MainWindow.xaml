<Window x:Class="Victor_Estevez_Ap1_p1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Victor_Estevez_Ap1_p1"
        mc:Ignorable="d"
        Title="Sistema de registro y consulta de productos" Height="450" Width="800">
    <Grid>

        <StackPanel> 
            <Menu> 
                <MenuItem Header="Registros" >
                    <MenuItem Header="Productos" x:Name="rProductos" Click ="RegistroMenuItem_Click" /> <!--  -->
                </MenuItem>

                <MenuItem Header="Consultas" >
                    <MenuItem Header="Productos" x:Name="cProductos" Click ="ConsultaMenuItem_Click" />  <!---->
                </MenuItem>
            </Menu>

        </StackPanel>

    </Grid>
</Window>
